{
  "name": "zod-firebase-admin",
  "description": "zod firebase-admin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valian-ca/zod-firebase-admin.git"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.js"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "type": "module",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "license": "MIT",
  "version": "0.0.0",
  "scripts": {
    "prettier": "prettier --check .",
    "eslint": "eslint --ext .ts,.tsx .",
    "type-check": "tsc",
    "test": "jest --passWithNoTests",
    "compile": "rm -rf ./lib && tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json",
    "prepack": "npm run compile"
  },
  "author": {
    "name": "Valian",
    "url": "https://valian.ca",
    "organization": true
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@tsconfig/node18": "^2.0.1",
    "@types/jest": "^29.5.1",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "@valian/eslint-config": "^0.0.6",
    "eslint": "^8",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-node": "^0.3.7",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "firebase-admin": "11.8.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-junit": "^15",
    "markdownlint-cli": "^0.34.0",
    "npm-check-updates": "^16",
    "prettier": "^2.8.8",
    "standard-version": "^9",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "firebase-admin": ">=11.8.0"
  },
  "dependencies": {
    "zod": "^3.21.4"
  },
  "keywords": [
    "zod", "firebase", "firebase-admin"
  ],
  "engines": {
    "node": ">= 18.0.0"
  }
}

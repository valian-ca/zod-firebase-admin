{
  "name": "zod-firebase-admin",
  "description": "zod firebase-admin",
  "author": {
    "name": "Valian",
    "url": "https://valian.ca",
    "organization": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valian-ca/zod-firebase-admin.git"
  },
  "keywords": [
    "zod",
    "firebase",
    "firebase-admin"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.mts",
        "default": "./lib/index.mjs"
      },
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      },
      "default": "./lib/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "main": "./lib/index.cjs",
  "module": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "version": "0.1.0",
  "scripts": {
    "prettier": "prettier --check .",
    "eslint": "eslint --ext .ts,.tsx,.cjs .",
    "type-check": "tsc",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\"",
    "prepare": "husky",
    "test": "jest --coverage",
    "serve": "firebase emulators:start --only firestore --project demo-tests",
    "test:integration": "npm exec jest -- --config=jest.integration.config.cjs --coverage",
    "test:integration:ci": "firebase emulators:exec --only firestore --project demo-tests 'npm exec jest -- --config=jest.integration.config.cjs --coverage'",
    "compile": "rm -rf ./lib && rollup -c",
    "prepack": "npm run compile"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.4",
    "@commitlint/config-conventional": "18.4.4",
    "@rollup/plugin-typescript": "11.1.6",
    "@tsconfig/node18": "18.2.2",
    "@types/jest": "29.5.11",
    "@valian/eslint-config": "0.0.23",
    "eslint": "8.56.0",
    "firebase-admin": "12.0.0",
    "firebase-functions-test": "3.1.1",
    "firebase-tools": "13.1.0",
    "husky": "9.0.6",
    "jest": "29.7.0",
    "jest-mock-extended": "3.0.5",
    "markdownlint-cli2": "0.12.1",
    "prettier": "3.2.2",
    "rollup": "4.9.6",
    "rollup-plugin-dts": "6.1.0",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "firebase-admin": "^11.0.0 || ^12.0.0",
    "typescript": ">=5"
  },
  "dependencies": {
    "zod": "^3.21.4"
  },
  "engines": {
    "node": ">= 18.0.0"
  }
}

{
  "name": "zod-firebase",
  "description": "zod firebase schema",
  "version": "2.0.3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valian-ca/zod-firebase-schema.git"
  },
  "author": {
    "name": "Valian",
    "organization": true,
    "url": "https://valian.ca"
  },
  "contributors": [
    {
      "name": "Julien Marcil",
      "email": "julien@valian.ca"
    }
  ],
  "keywords": [
    "zod",
    "schema",
    "firestore",
    "firebase"
  ],
  "license": "MIT",
  "dependencies": {
    "type-fest": "^4.26.1"
  },
  "devDependencies": {
    "firebase": "^12.1.0",
    "firebase-functions-test": "^3.4.1",
    "nanoid": "^3.3.11",
    "vitest-mock-extended": "^3.1.0"
  },
  "peerDependencies": {
    "@firebase/firestore": "^4.7.0",
    "zod": "^3.23.0 || ^4.0.0"
  },
  "exports": {
    ".": {
      "types": {
        "import": "./lib/index.d.mts",
        "require": "./lib/index.d.cts"
      },
      "import": "./lib/index.mjs",
      "require": "./lib/index.cjs",
      "default": "./lib/index.mjs"
    }
  },
  "type": "module",
  "main": "./lib/index.cjs",
  "module": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">= 22.0.0"
  },
  "scripts": {
    "build": "rm -rf ./lib && rollup -c",
    "prepack": "npm run build",
    "serve": "firebase emulators:start --only firestore --project demo-zod-firebase",
    "test": "vitest run --coverage",
    "test:integration": "vitest run --config=vitest.integration.config.mjs --coverage",
    "test:integration:ci": "firebase emulators:exec --only firestore --project demo-zod-firebase 'vitest run --config=vitest.integration.config.mjs --coverage'",
    "type-check": "tsc"
  }
}

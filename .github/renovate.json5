{
  extends: ["config:recommended", ":semanticCommits", ":semanticCommitTypeAll(chore)"],
  labels: ["dependencies"],
  packageRules: [
    {
      groupName: "GitHub Actions Dependencies",
      matchManagers: ["github-actions"],
      matchPackageNames: ["/.*/"],
    },
    {
      groupName: "Node-based Dev Tools",
      matchManagers: ["npm"],
      matchPackageNames: ["/.*/"],
    },
    {
      groupName: "Node.js",
      matchPackageNames: ["node"],
      allowedVersions: "<19.0.0",
    },
    {
      groupName: "main dependencies",
      matchPackageNames: ["firebase-admin", "zod"],
    },
    {
      groupName: "Tests",
      matchPackageNames: ["/jest/"],
    },
    {
      groupName: "Linters",
      matchPackageNames: ["/eslint/", "/prettier/", "/commitlint/"],
    },
  ],
}
